<Window x:Class="LoveLetter_GruppeOpgave.Views.HomeScreenViews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LoveLetter_GruppeOpgave.ViewModel"
             mc:Ignorable="d" 
        Title="HomeScreenViews" Height="450" Width="800">

    <Window.DataContext>
        <local:HomeViewModel/>
    </Window.DataContext>

    <Grid>
        <ListView ItemsSource="{Binding Lobbies, UpdateSourceTrigger=Default, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center"
                  Height="300" Width='200' Margin="0,0,0,40">
        </ListView>
    </Grid>
</Window>